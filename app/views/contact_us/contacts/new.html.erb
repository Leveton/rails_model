<div class = 'row'>
<div class = 'span10'>
<div id="page-wrap">

<h2><%= t('.contact_us') %></h2>
<h3>We appreciate all feedback and questions</h3>
<%= form_for @contact, :url => contacts_path do |f| %>
  <%- if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(@contact.errors.count, "error")} prohibited this doc from being saved:" %></h2>
      <ul>
        <%- @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="contact_body">
  <div id="contact-area">
    <%= f.label t('.email') %>
    <%= f.text_field :email %>


    <%= f.label t('.message') %>
    <%= f.text_area :message %><br /><br />


    <div class = "contact_us_submit" style="clear:both;"><%= f.submit t('.submit'), :id => "contact_us_contact_submit" %></div>

<% end %>


</div>
</div>
</div>
</div>
</div>
