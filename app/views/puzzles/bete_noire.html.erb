	<p>Mon</p>
	<div class = "droppable" style = "height:75px;width:80px;padding:0em;background-color:#102C31; margin-left:0px;" id = "2"><p>afternoon</p></div>
	<div class = "droppable" style = "height:75px;width:80px;padding:0em;background-color:#000; margin-left:0px; margin-top:0px;" id = "8"><p>evening</p></div>
</div>
<div class="droppable2" style = "height:215px; width:80px; padding:0em;" id = "3">
	<p>Tues</p>
	<div class = "droppable" style = "height:75px;width:80px;padding:0em;background-color:#102C31; margin-left:0px;" id = "4"><p>afternoon</p></div>
	<div class = "droppable" style = "height:75px;width:80px;padding:0em;background-color:#000; margin-left:0px; margin-top:0px;" id = "5"><p>evening</p></div>
