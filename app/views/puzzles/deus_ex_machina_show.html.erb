<div id = "machina_score1"><%= current_user.get_puzzle_times('Deus Ex Machina', 0) %></div>
<div id = "machina_score2"><%= current_user.get_puzzle_times('Deus Ex Machina', 1) %></div>
<div id = "machina_score3"><%= current_user.get_puzzle_times('Deus Ex Machina', 2) %></div>
<div id = "noire_attempts"><%= current_user.get_puzzle_attempts('Deus Ex Machina', 0) %></div>
<div id = "noire_resets"><%= current_user.get_puzzle_resets('Deus Ex Machina', 0) %></div>

<div style = 'display:table;'>
<h1>Graphs and stats for Deus Ex Machina</h1>
<h2>Time per puzzle in seconds</h2>
<div class = "puzzle_show_left"><div class = 'user_y_axis'></div></div>
<div class = "puzzle_show_right"><div class = 'prepcloud_y_axis'></div></div>
<h2>Attempts per puzzle</h2>
<div class = "puzzle_show_left2"><div class = 'user_y_axis2'></div></div>
<div class = "puzzle_show_right2"><div class = 'prepcloud_y_axis2'></div></div>
<h2>Resets per puzzle</h2>
<div class = "puzzle_show_left3"><div class = 'user_y_axis3'></div></div>
<div class = "puzzle_show_right3"><div class = 'prepcloud_y_axis3'></div></div>
</div>

<script type="text/javascript" src="/javascripts/d3/d3.min.js"></script>
<script type="text/javascript" src="/javascripts/controllers/puzzles_show.js"></script>
<script>

//Deus Ex Machina
$(function() {
  user_data.length = 0;
  var punta = $('#machina_score1').html();
  var punta2 = $('#machina_score2').html();
  var punta3 = $('#machina_score3').html();
  user_data.push(punta);
  user_data.push(punta2);
  user_data.push(punta3);
  d3_charts('.puzzle_show_left','.user_y_axis', '.puzzle_show_right', '.prepcloud_y_axis', machina_data, machina_y_data, user_data);
});

$(function() {
  attempts.length = 0;
  var punta = $('#noire_attempts').html();
  attempts.push(punta);
  d3_charts('.puzzle_show_left2','.user_y_axis2', '.puzzle_show_right2', '.prepcloud_y_axis2', machina_ave_attempts, machina_y_attempts, attempts);
});

$(function() {
  resets.length = 0;
  var punta = $('#noire_resets').html();
  resets.push(punta);
  d3_charts('.puzzle_show_left3','.user_y_axis3', '.puzzle_show_right3', '.prepcloud_y_axis3', machina_ave_resets, machina_y_resets, resets);
});
</script>
